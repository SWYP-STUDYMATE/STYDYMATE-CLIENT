{
  "name": "studymate-workers",
  "version": "1.0.0",
  "description": "Cloudflare Workers backend for STUDYMATE",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "tail": "wrangler tail",
    "tail:staging": "wrangler tail --env staging",
    "tail:production": "wrangler tail --env production",
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "logs": "wrangler tail",
    "logs:staging": "wrangler tail --env staging",
    "logs:production": "wrangler tail --env production",
    "test:deployment": "./scripts/test-deployment.sh",
    "rollback": "./scripts/rollback.sh",
    "secret:list": "wrangler secret list",
    "secret:list:staging": "wrangler secret list --env staging",
    "secret:list:production": "wrangler secret list --env production"
  },
  "dependencies": {
    "@cloudflare/ai": "^1.0.0",
    "hono": "^4.9.9"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^4.38.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
