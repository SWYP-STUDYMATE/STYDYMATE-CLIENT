# Production Environment Variables (Local Build용)
# 이 파일은 로컬에서 프로덕션 빌드 시 사용됩니다

# API URLs
VITE_API_URL=https://api.languagemate.kr
VITE_WS_URL=wss://api.languagemate.kr

# Workers API (for AI and WebRTC)
VITE_WORKERS_API_URL=https://api.languagemate.kr
VITE_WORKERS_WS_URL=wss://api.languagemate.kr
VITE_WORKERS_BASE_URL=https://api.languagemate.kr

# Features
VITE_ENABLE_LEVEL_TEST=true
VITE_ENABLE_VIDEO_CALL=true
VITE_ENABLE_GROUP_CALL=true

# Mock Mode - 프로덕션 환경에서 완전 비활성화
VITE_MOCK_MODE=false
